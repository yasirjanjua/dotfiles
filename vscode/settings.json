{
  "editor.fontSize": 16,
  "editor.lineHeight": 25,
  "editor.letterSpacing": 0.5,
  "editor.fontWeight": "400",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 5,
  "editor.cursorBlinking": "solid",
  "editor.renderWhitespace": "all",
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.minimap.showSlider": "always",
  "editor.fontFamily": "Operator Mono, Menlo, Monaco, 'Courier New', monospace",
  "editor.rulers": [
    80,
    100,
    120
  ],
  // show snippets before any other auto completion
  "editor.snippetSuggestions": "top",
  "editor.formatOnSave": true,
  "vscode_custom_css.imports": [
    "file:///Users/yasir/.vscodestyles.css"
  ],
  // turn auto-format-on-save off for JS
  "[javascript]": {
    "editor.formatOnSave": false
  },
  /* >>> Workbench Setup <<< */
  "workbench.editor.tabSizing": "shrink",
  "workbench.colorTheme": "Cobalt2",
  // sets the side-action-bar
  "workbench.activityBar.visible": true,
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "newUntitledFile",
  // this lets you quickly open multiple items in a row and not have the previous ones closed on you
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "window.title": "${dirty} ${activeEditorMedium}${separator}${rootName}",
  "window.zoomLevel": 0,
  // Optional: If you have the prettier extension enabled for other languages like CSS and HTML, turn it off for JS since we are doing it through Eslint already
  //"prettier.disableLanguages": [
  //    "js"
  //],
  /* >>> Emmet Setup <<< */
  "emmet.includeLanguages": {
    "markdown": "html",
    // "javascript": "javascriptreact"
  },
  "emmet.triggerExpansionOnTab": true,
  "html.format.enable": true,
  "html.format.preserveNewLines": true,
  /* >>> EsLint Setup <<< */
  "eslint.autoFixOnSave": true,
  "eslint.alwaysShowStatus": true,
  /* >>> Files Setup <<< */
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 2000,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.next": true
  },
  /* >>> Git Setup <<< */
  // Gitpath for sub-linux
  "git.path": "C:\\Program Files\\Git\\wslgit.exe",
  /* >>> Terminal Setup <<< */
  // sub-linux terminal and font
  "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\wsl.exe",
  "terminal.integrated.fontFamily": "\"Operator Mono\", \"Inconsolata for Powerline\", monospace",
  "terminal.integrated.fontSize": 16,
}